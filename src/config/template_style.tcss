#menu {
    align: left middle;
    height: 3;
    margin: 0 1 0 1;
    padding: 0 1;
}

#main {
    padding: 0 0;
    height: 1fr;
    align: center middle;
    /* I legit have no clue why there is a random right padding and i cant get rid of it, so compensation with a left padding */
    margin: 0 0 0 1;
}

Footer {
    height: 1;
}

#file_list_container {
    height: 1fr;
    border: none;
    width: $-interface-fractions-file_list-$fr;
}

#pinned_sidebar_container {
    height: 1fr;
    margin: 0;
    width: $-interface-fractions-pinned_sidebar-$fr;
}
#pinned_sidebar_container > Input,
#file_list_container > Input {
    padding: 0 1;
    margin: 0 1;
    background: transparent;
    height: 1;
    border: none;
}
#pinned_sidebar_container OptionList,
#file_list_container OptionList {
    background: transparent;
    border: none;
}

#preview_sidebar {
    height: 1fr;
    margin: 0;
    width: 2fr;
    border: none;
    width: $-interface-fractions-preview_sidebar-$fr;
    padding: 0 1;
}
/*
* {
    border: ascii blue;
}*/

#below_menu Input {
    height: 3;
    width: 1fr;
    margin: 0 1 0 0;
    border: none;
    padding: 0 2 0 2;
    border: $-interface-border-style-$ white;
    background: transparent;
}

#below_menu Input.hide_border_bottom {
    border-bottom: none;
    height: 3;
    background: $boost;
}

#below_menu Button {
    padding: 0 !important;
    margin: 0 1;
    height: 3;
    max-width: 7;
    border: none;
}
#below_menu {
    margin: 0 1 0 1;
    border: $-interface-border-style-$ white;
    max-height: 11
}
#below_menu PathAutoCompleteInput {
    padding: 0 2 1 2;
    margin: -1 1 0 33;
    max-height: 9;
    overlay: screen;
    height: 9;
    width: 1fr;
    border: $-interface-border-style-$ white;
    border-top: none;
    background: $boost;
    AutoCompleteList {
        width: 1fr;
    }
    Option {
        width: 100%;
    }
}
.option {
    border: none;
    height: 1;
    max-width: 3;
    width: 3;
    padding: 0;
    margin: 0;
}

#menu, #below_menu, #pinned_sidebar_container, #file_list_container, #preview_sidebar {
    background: black 0%;
    border: $-interface-border-style-$ $-interface-border-inactive_color-$;
}

#menu:focus-within,
#below_menu:focus-within,
#pinned_sidebar_container:focus-within,
#file_list_container:focus-within,
#preview_sidebar:focus-within,
#preview_sidebar:focus {
    border: $-interface-border-style-$ $-interface-border-color-$;
}
#preview_sidebar > * {
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
}
AutoImage {
    width: auto;
    height: auto;
    align: center bottom;
}
PinnedSidebar Option {
    color: red !important;
}
.hidden {
    display: none;
}

PinnedSidebar {
    scrollbar-size: 0 0 !important;
}